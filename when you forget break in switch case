<button onclick="simpleSwitch();">Simple Switch Sample</button><p></p>
<script>
function forgetABreak(){
    let num= prompt('Enter a number: ');
    num=parseInt(num);
    switch(num){
        case 1:
            console.log('This is case 1 with break ');
            break;
        case 2:
            console.log('This is case 2 without break ');
        case 3:
            console.log('This is case 3 with break ');
        break;
        case 4:
            console.log('This is case 4 without break ');
        default:
        console.log('This is default statement');

    }
}
</script>
</body>
