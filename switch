<body>
<button onclick="simpleSwitch();">Simple Switch Sample</button><p></p>
<script>
   
function simpleSwitch() {
    let num= prompt('Enter the product number: ');
    productId=parseInt(num);
    switch(productId){
        case 1:
            console.log('product 1');
            break;
        case 2:
            console.log('product 2');
            break;
        case 3:
            console.log('product 3');
            break;
        default:
            console.log('There are only 3 products');
    }
}
</script>
</body>
